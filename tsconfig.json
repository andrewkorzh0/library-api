{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"baseUrl": "./src",
		"outDir": "dist",
		"sourceMap": true,
		"noImplicitAny": true,
		//jest settings
		"target": "es6",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"]
}
